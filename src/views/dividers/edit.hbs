<h1 class="title">Editar Divisor</h1>
<div class="box">
  <form action="/dividers/{{divider.id}}/edit" method="POST">
    <div class="field">
      <label class="label" for="title">Título</label>
      <input class="input" name="title" type="text" value="{{divider.title}}" placeholder="Título para la tarea...." autofocus required>
    </div>

    <div class="field">
      <label for="color" class="label">Color</label>
      <div class="select is-fullwidth">
        <select name="color" id="color" data-color="{{divider.color}}">
        </select>
      </div>
    </div>

    <div class="buttons">
      <button class="button is-info">Confirmar</button>
    </div>
  </form>
</div>

<script type="module" src="/js/selectColor.js"></script>