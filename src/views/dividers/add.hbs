<h1 class="title">Nueva Divisor</h1>
<div class="box">
  <form action="/dividers" method="POST">
    <div class="field">
      <label class="label" for="title">Título</label>
      <input class="input" id="title" name="title" type="text" placeholder="Título para la tarea...." required>
    </div>

    <div class="field">
      <label for="color" class="label">Color</label>
      <div class="select is-fullwidth">
        <select name="color" required>
          <option value="black" class="has-text-black">Negro</option>
          <option value="dark" class="has-text-dark">Gris Oscuro</option>
          <option value="link" class="has-text-link">Azul</option>
          <option value="info" class="has-text-info">Celeste</option>
          <option value="success" class="has-text-success">Verde</option>
          <option value="danger" class="has-text-danger">Rojo</option>
        </select>
      </div>
    </div>
    

    <div class="buttons">
      <button class="button is-info">Añadir</button>
    </div>
  </form>
</div>