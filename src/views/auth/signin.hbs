<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-three-fifths is-offset-one-fifth">
        <form action="/signin" method="POST" class="form box">
          <h3 class="title is-3">Iniciar Sesión</h3>
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input class="input" name="email" type="email" maxlength="60" placeholder="Escribe tu dirección de correo" required />
            </div>
          </div>
          <div class="field">
            <label class="label">Contraseña</label>
            <div class="control">
              <input class="input" name="password" type="password" maxlength="60" placeholder="Escribe tu contraseña" required>
            </div>
          </div>
          <div class="field">
            <a href="/signup">¿Aún no tienes una cuenta? Registrate</a>
          </div>

          <div class="field">
            <div class="control">
              <button class="button is-success">Iniciar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div> 
</section>